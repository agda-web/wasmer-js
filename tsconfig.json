{
  "include": [
    "pkg",
    "src-js"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "declarationDir": "./dist/",
    "rootDir": ".",
    "noImplicitAny": true,
    "declaration": true,
    "module": "es2020",
    "target": "ES2015",
    "jsx": "react",
    "allowJs": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  }
}
